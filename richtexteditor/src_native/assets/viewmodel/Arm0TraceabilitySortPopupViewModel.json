{
    "schemaVersion" : "1.0.0",
    "imports":
    [
        "js/aw-balloon-popup-panel.directive"
    ],

    "actions":{
        "applySort": {
            "actionType": "JSFunction",
            "method": "attachSortingHandler",
            "inputData": {
                "data": "{{data}}",
                "ctx": "{{ctx}}"
            },
            "deps": "js/Arm0TraceabilityMatrix"
        }
    },
    "data": {
    },
    "onEvent": [
        {
            "eventId": "Arm0TraceabilitySortPopup.reveal",
            "cacheEventData": true,
            "action": "applySort"
        }
    ],
    "i18n": {
        "SortAscending":[
            "MatrixMessages"
        ],
        "SortDescending":[
            "MatrixMessages"
        ],
        "NoSorting":[
            "MatrixMessages"
        ]
    }
}
