{
    "schemaVersion" : "1.0.0",
    "imports":
    [
        "js/aw-i18n.directive",
        "js/aw-flex-row.directive",
        "js/aw-flex-column.directive",
        "js/aw-balloon-popup-panel.directive"
    ],

    "actions":{
        "reveal": {
            "actionType": "JSFunction",
            "method": "createPopupData",
            "inputData": {
                "data": "{{data}}",
                "ctx": "{{ctx}}"
            },
            "deps": "js/Arm0TraceabilityMatrix"
        }
    },
    "data": {
        "hiddenObjectCountLabel":{
            "displayName": ""
        }
    },
    "onEvent": [
        {
            "eventId": "Arm0TraceabilityMatrixHiddenObjectTooltip.reveal",
            "cacheEventData": true,
            "action": "reveal"
        }
    ],
    "i18n": {
        "hiddenColumnLabel":[
            "MatrixMessages"
        ],
        "hiddenRowsLabel":[
            "MatrixMessages"
        ],
        "doubleClickToUnhide":[
            "MatrixMessages"
        ]
    }
}
